{
  "response_type": "ephemeral",
  "text": "<%= @teams.map { |team| team[:players].map { |player| player[:name] }.to_sentence + " #{team[:relation]} " }.join('') %>.",
  "attachments": [
    {
      "text": "Which game are you recording?",
      "callback_id": "record_result",
      "color": "#005500",
      "attachment_type": "default",
      "actions": [
        <%- @games.each do |game| %>
        {
          "name": "<%= game.name %>",
          "text": "<%= game.name %>",
          "type": "button",
          "value": "<%= URI.encode({ game_id: game.id, teams: @teams }.to_json) %>"
        },
        <%- end %>
      ]
    }
  ]
}
